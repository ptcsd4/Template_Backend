@model Ptc.Demo.Web.Models.Account.AccountViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>PTC 後台式樣</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />


    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/Ace")
    <link href="~/Content/Demo.css" rel="stylesheet" />

</head>

<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon"></i>
                                <i class="ace-icon fa fa-leaf green">
                                </i>
                                <span class="white" style="font-size:x-large!important;"> PTC 後台式樣</span>
                            </h1>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header lighter bigger">
                                            <i class="ace-icon fa fa-edit "></i>
                                            請輸入您的資訊
                                        </h4>

                                        <div class="space-6"></div>

                                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "loginForm", @name = "loginForm" }))
                                        {

                                            <fieldset>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "帳號" })
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "密碼" })
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                </label>
                                                <span class="require">@Html.ValidationMessage("LoginMsg")</span>
                                                <div class="clearfix">


                                                    <button type="submit" class="width-35 text-center btn btn-sm">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">登入</span>
                                                    </button>
                                                </div>

                                            </fieldset>
                                        }

                                    </div><!-- /.widget-main -->

                                    <div class="toolbar clearfix">
                                        <div>
                                            &nbsp;
                                        </div>
                                    </div>
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->


                        </div><!-- /.position-relative -->

                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->

</body>

</html>

<script>
    window.localStorage.clear();
</script>


